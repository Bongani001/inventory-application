<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invetory Application</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-gray-800">
    <header class="bg-gray-700">
      <nav class="flex justify-between items-center p-4">
        <a href="/" class="text-white text-2xl font-semibold"
          >Inventory Application</a
        >
        <div class="space-x-4">
          <a
            class="text-white hover:bg-gray-400 hover:rounded p-2"
            href="/products"
            >Products</a
          >
          <a
            class="text-white hover:bg-gray-400 hover:rounded p-2"
            href="/categories"
            >Categories</a
          >
        </div>
      </nav>
    </header>
    <main class="px-3">
      <div class="max-w-3xl mx-auto p-6 rounded-md">
        <h1 class="text-2xl text-white font-bold text-center mb-4">
          Product Categories
        </h1>

        <!-- Categories Table -->
        <table class="min-w-full bg-white border border-gray-300">
          <thead>
            <tr
              class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal"
            >
              <th class="py-3 px-6 text-left">ID</th>
              <th class="py-3 px-6 text-left">Category Name</th>
              <th class="py-3 px-6 text-center">Actions</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 text-sm font-light">
            <% categories.forEach(category => { %>
            <tr class="border-b border-gray-300 hover:bg-gray-100">
              <td class="py-3 px-6 text-left"><%= category.id %></td>
              <td class="py-3 px-6 text-left"><%= category.name %></td>
              <td class="py-3 px-6 text-center">
                <!-- Edit Button -->
                <a
                  href="/categories/<%= category.id %>/update"
                  class="text-blue-500 hover:text-blue-700 mx-2"
                  >Edit</a
                >
                <!-- Delete Button -->
                <form
                  action="/categories/<%= category.id %>/delete"
                  method="POST"
                  class="inline"
                >
                  <button
                    type="submit"
                    onclick="return confirm('Are you sure you want to delete this category?');"
                    class="text-red-500 hover:text-red-700"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <!-- Add Category Button -->
        <div class="mt-6 text-center">
          <a
            href="/categories/add-category"
            class="bg-indigo-600 text-white px-4 py-2 rounded-md shadow hover:bg-indigo-700"
          >
            Add New Category
          </a>
        </div>
      </div>
    </main>
  </body>
</html>
