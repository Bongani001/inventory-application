<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invetory Application</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body>
    <header class="bg-gray-700">
      <nav class="flex justify-between items-center p-4">
        <h1 class="text-white text-2xl font-semibold">Inventory Application</h1>
        <div class="space-x-4">
          <a
            class="text-white hover:bg-gray-400 hover:rounded p-2"
            href="/products"
            >Products</a
          >
          <a
            class="text-white hover:bg-gray-400 hover:rounded p-2"
            href="/categories"
            >Categories</a
          >
        </div>
      </nav>
    </header>
    <main class="px-3">
      <h2 class="text-xl text-green-700 font-semibold pt-2">
        Available Products:
        <div>
          <% products.forEach((product) => { %>
          <div class="card">
            <a href="/<%= product.id %>/update" class="card-link">Update</a>
            <form
              action="/<%= product.id %>/delete"
              method="POST"
              class="delete-form"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this product?');"
                class="delete-button"
              >
                Delete
              </button>
            </form>
            <h2 class="product-name"><%= product.name %></h2>
            <p class="product-description">
              Description: <%= product.description %>
            </p>
            <p class="product-price">Price: <%= product.price %></p>
            <p class="product-age-group">
              Stock Quantity: <%= product.stock_quantity %>
            </p>
            <small class="product-date"
              >Added on: <%= product.created_at.toLocaleString() %></small
            >
          </div>
          <% }); %>
        </div>
      </h2>
    </main>
  </body>
</html>
